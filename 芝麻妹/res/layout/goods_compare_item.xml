<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="@dimen/goods_item_margin_horizontal"
    tools:ignore="SpUsage,HardcodedText" >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/goods_item_tv_price_lowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="439"
            android:textColor="@color/goods_item_red_light"
            android:textSize="@dimen/goods_item_textsize_price" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团购"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/goods_compare_item_tv_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/goods_item_btn_back"
        android:padding="2dp"
        android:text="去看看"
        android:textColor="@color/white" />

</RelativeLayout>